{
  "databaseChangeLog": [
    {
      "preConditions": {
        "runningAs": {
          "username": "postgres"
        }
      }
    },
    {
      "changeSet": {
        "id": "29012023-1300-001-create-tutorial-table",
        "author": "andres.ramirez",
        "comments": "Tutorial tables creation",
        "changes": [
          {
            "sql": {
              "comment": "Add uuid-ossp extension for organization schema",
              "endDelimiter": ";",
              "sql": "CREATE EXTENSION IF NOT EXISTS \"uuid-ossp\""
            }
          },
          {
            "createTable": {
              "schemaName": "poc",
              "tableName": "tutorial",
              "comments": "Creating main tutorial table ",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "uuid",
                    "constraints": {
                      "primaryKey": true,
                      "primaryKeyName": "pk_tutorial",
                      "unique": true,
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "title",
                    "type": "varchar(100)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "description",
                    "type": "varchar(500)",
                    "constraints": {
                      "nullable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "published",
                    "type": "boolean",
                    "constraints": {
                      "nullable": false
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
